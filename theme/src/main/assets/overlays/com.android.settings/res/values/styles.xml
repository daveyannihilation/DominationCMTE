<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SecurityPreferenceButtonContainer" parent="@*android:style/Widget.Material.SegmentedButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">2.0</item>
        <item name="android:dividerPadding">8.0dip</item>
    </style>
    <style name="SecurityPreferenceButton" parent="@*android:style/Widget.Material.Button.Borderless">
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="Widget.TimePicker" parent="@*android:style/Widget.Material.TimePicker">
        <item name="android:numbersBackgroundColor">#ff000000</item>
    </style>
    <style name="SetupWizardTheme.Light" parent="@*android:style/Theme.Material.NoActionBar">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:alertDialogTheme">@style/Theme.Light.WifiDialog</item>
        <item name="android:colorAccent">@*common:color/accent_material_dark</item>
        <item name="preferenceBackgroundColor">#ff000000</item>
    </style>
    <style name="SetupWizardWifiTheme.Light" parent="@*android:style/Theme.Material.NoActionBar" />
    <style name="Theme.Light.WifiDialog" parent="@*android:style/Theme.Material.Dialog.Alert">
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
    <style name="Theme.SettingsBase" parent="@*android:style/Theme.Material" />
    <style name="Theme.ActionBar" parent="@*android:style/Widget.Material.ActionBar.Solid">
        <item name="android:contentInsetStart">16.0dip</item>
    </style>
    <style name="Theme.DialogWhenLarge" parent="@*android:style/Theme.Material.DialogWhenLarge">
        <item name="android:statusBarColor">#ff000000</item>
        <item name="android:colorBackground">#ff000000</item>
        <item name="android:actionBarStyle">@style/Theme.ActionBar</item>
        <item name="android:colorPrimary">#ff111111</item>
        <item name="android:colorPrimaryDark">#ff000000</item>
        <item name="android:colorAccent">@*common:color/accent_material_dark</item>
        <item name="preferenceBackgroundColor">@drawable/preference_background</item>
    </style>
    <style name="Theme.AlertDialog" parent="@*android:style/Theme.Material.Dialog.Alert">
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textColorSecondary">#ffdddddd</item>
        <item name="android:colorBackground">#ff000000</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:actionBarStyle">@style/Theme.ActionBar</item>
        <item name="android:colorPrimary">#ff111111</item>
        <item name="android:colorPrimaryDark">#ff000000</item>
        <item name="android:colorAccent">@*common:color/accent_material_dark</item>
    </style>
    <style name="Theme.FingerprintEnroll" parent="@*android:style/Theme.Material.NoActionBar">
        <item name="android:windowBackground">@android:color/background_dark</item>
    </style>
    <style name="Theme.SubSettingsDialogWhenLarge" parent="@style/Theme.SettingsBase" />
    <style name="Theme.DateTimeSettingsSetupWizard" parent="@*android:style/Theme.Material.NoActionBar" />

    <style name="Theme.SettingsLicenseActivity" parent="@*android:style/Theme.Material.Panel" />

    <style name="Theme.AppPicker" parent="@*android:style/Theme.Material.Dialog" />

    <style name="Theme.SettingsDialog" parent="@*android:style/Theme.Material.Dialog.NoActionBar" />

    <style name="Theme.SettingsAlertDialog" parent="@*android:style/Theme.Material.Dialog.Alert" />
</resources>
